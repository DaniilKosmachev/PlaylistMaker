<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_activity_color"
    android:orientation="vertical"
    android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_size"/>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        >
        <Button
            android:id="@+id/search_window"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_button_height"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:text="@string/search"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="@dimen/main_text_size"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/main_button_corner_radius"
            app:iconPadding="@dimen/main_padding_left_image"
            />
        <Button
            android:id="@+id/library_window"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_button_height"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:text="@string/media_library"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="@dimen/main_text_size"
            app:icon="@drawable/library"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/main_button_corner_radius"
            app:iconPadding="@dimen/main_padding_left_image"
            />
        <Button
            android:id="@+id/setting_window"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_button_height"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="@dimen/main_text_size"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            app:cornerRadius="@dimen/main_button_corner_radius"
            app:iconPadding="@dimen/main_padding_left_image"
            />
    </LinearLayout>
</LinearLayout>
