<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <Button
        style="@style/no_connect_view_update_button"
        android:id="@+id/add_new_playlist"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="Новый плейлист"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="54dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imageViewEmptyTracksFragment"
        style="@style/empty_list_of_favorite_track_image"
        android:visibility="visible"
        android:layout_marginTop="46dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/empty_playlist_list_text"
        style="@style/text_empty_list_fragment_favorite_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_playlist_list"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textAlignment="center"/>

</LinearLayout>