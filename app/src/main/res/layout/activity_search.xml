<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        style="@style/settings_activity_linear_layout_style_main"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/main_padding_left_image">

            <ImageButton
                android:id="@+id/backToMainActivityViewButtonFromSearch"
                style="@style/settings_activity_linear_layout_style_top_image_and_text"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/arrowback" />
            <TextView
                style="@style/settings_activity_linear_layout_style_top_image_and_text"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="top"
                android:padding="@dimen/main_padding_left_image"
                android:text="@string/search"
                android:textSize="@dimen/main_text_size" />
        </LinearLayout>

        <FrameLayout
            style="@style/search_activity_frame_layout"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginHorizontal="16dp">

            <EditText
                style="@style/search_activity_edit_text"
                android:id="@+id/editTextSearchActivity"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="@dimen/main_padding_left_image"
                android:fontFamily="@font/ys_display_regular"
                android:hint="@string/search"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"/>

            <ImageButton
                android:id="@+id/clearEditTextSearchActivity"
                style="@style/search_activity_image_buttom"
                android:src="@drawable/close"
                android:visibility="gone" />
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/track_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/track_view"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/main_padding_left_image"
            android:paddingLeft="4dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>