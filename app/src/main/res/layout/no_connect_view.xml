<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center">
    <ImageView
        style="@style/no_connect_view_image_view"
        android:layout_weight="0"/>
    <TextView
        style="@style/no_connect_view_text_view"
        android:text="@string/connect_error"
        android:layout_marginTop="16dp"
        android:layout_weight="0"/>
    <TextView
        style="@style/no_connect_view_text_view"
        android:text="@string/download_error_please_repeat"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_weight="0"/>
    <Button
        style="@style/no_connect_view_update_button"
        android:id="@+id/updateQueryButton"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/update"
        android:textAllCaps="false"
        android:textSize="@dimen/track_name_text_size"
        app:cornerRadius="54dp"
        android:layout_weight="0"/>
</LinearLayout>